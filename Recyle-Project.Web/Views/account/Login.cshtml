
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LoginViewModel



<main id="main" data-aos="fade" data-aos-delay="1500">
    <div class="page-header d-flex align-items-center">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                </div>
            </div>
        </div>
    </div><!-- End Page Header -->
    <div class="row ">
        <div class="col col-4 offset-4">
            <h1 class="display-4 border-bottom text-center pb-2 border-2 ">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row">

        <div class="col-4 offset-4">
            <form asp-validation-summary="ModelOnly" method="post">
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label ">Username</label>
                    <input asp-for="UserName" placeholder="johndoe" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="password ">Password</label>
                    <input asp-for="Password" placeholder="johndoe" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <br />
                <div class="form-group d-grid mb-3 ">
                    <button type="submit" class="btn btn-success d-block">Login</button>
                </div>
                @if (ViewData["ValidateMessage"] != null)
                {
                    <br />
                    <br />
                    <label class="text-danger">@ViewData["ValidateMessage"]</label>
                }
            </form>
        </div>
    </div>
</main>
<a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>





